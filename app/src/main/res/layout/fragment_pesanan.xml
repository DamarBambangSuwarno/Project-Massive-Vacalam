<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Secondary1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pesanan">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/rubiksemibold"
            android:text="Pesan Tiket"
            android:textColor="@color/Secondary5"
            android:textSize="28sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/text_pesan"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/rubikregular"
            android:gravity="center"
            android:text="Anda belum pernah melakukan pemesanan tiket, silahkan pesan terlebih dahulu"
            android:textColor="@color/Secondary5"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/pilihWisataBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rubikmedium"
                android:text="Pilih wisata"
                android:textColor="@color/Secondary1"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>