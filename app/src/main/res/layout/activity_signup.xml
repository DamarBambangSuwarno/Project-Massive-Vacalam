<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/Secondary1"
    tools:context=".Signup">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="35sp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat"
            android:textSize="38sp"
            android:textColor="@color/Secondary5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun Anda!"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="@color/Primary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/header"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Nama"
            android:textSize="20sp"
            android:textColor="@color/Secondary5"/>
        <EditText
            android:id="@+id/usernameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:padding="18dp"
            android:hint="Masukan nama anda"
            android:textColorHint="@color/Secondary4"
            android:drawableRight="@drawable/outline_person_outline_24"
            android:drawablePadding="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/username"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/Secondary5"/>
        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:padding="18dp"
            android:hint="Masukan email anda"
            android:textColorHint="@color/Secondary4"
            android:drawableRight="@drawable/baseline_alternate_email_24"
            android:drawablePadding="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Password"
            android:textSize="20sp"
            android:textColor="@color/Secondary5"/>
        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:padding="18dp"
            android:inputType="textPassword"
            android:hint="Masukan password anda"
            android:textColorHint="@color/Secondary4"
            android:drawableRight="@drawable/outline_lock_open_24"
            android:drawablePadding="18dp"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/masukButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/password"
        android:background="@drawable/button_bg_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Daftar"
            android:textSize="18sp"
            android:textColor="@color/Secondary1"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/masukSekarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/masukButton"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah mempunyai akun ?"
            android:textColor="@color/Secondary5"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Masuk"
            android:textColor="@color/Primary"
            android:textSize="16sp"/>


    </LinearLayout>
    <TextView
        android:id="@+id/lewati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/masukSekarang"
        android:text="Lewati"
        android:textColor="@color/Primary"
        android:textSize="16sp"/>


</RelativeLayout>